# =============================================================================
# ForestechOil - Root Environment Variables Template
# =============================================================================
# Copy this file to .env and customize for your environment.
# This file contains all environment variables used across the project.
# =============================================================================

# -----------------------------------------------------------------------------
# MySQL Configuration
# -----------------------------------------------------------------------------
# Local WSL development:
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASS=hp
MYSQL_DB=FORESTECHOIL
MYSQL_READONLY=false

# Docker environment (used by docker-compose):
# MYSQL_HOST=mysql-forestech
# MYSQL_PORT=3306
# MYSQL_ROOT_PASSWORD=forestech_root_2024

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
CONSUL_PORT=8500
CONFIG_SERVER_PORT=8888
API_GATEWAY_PORT=8080
CATALOG_SERVICE_PORT=8081
FLEET_SERVICE_PORT=8082
INVENTORY_SERVICE_PORT=8083
PARTNERS_SERVICE_PORT=8084
INVOICING_SERVICE_PORT=8085
REPORTS_SERVICE_PORT=8086
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Docker Network Configuration
# -----------------------------------------------------------------------------
NETWORK_NAME=forestech-network
NETWORK_SUBNET=172.20.0.0/16

# -----------------------------------------------------------------------------
# Development Environment
# -----------------------------------------------------------------------------
# Set to 'codespaces' when running in GitHub Codespaces
# Set to 'local' when running on local machine
ENVIRONMENT=local

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8080/api
