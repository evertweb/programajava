# ============================================================================
# FORESTECH CLI - Environment Configuration Template
# ============================================================================
# IMPORTANT: Copy this file to application.properties and configure with your values
# Location: src/main/resources/application.properties

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/FORESTECHOIL
DB_USERNAME=root
DB_PASSWORD=your_password_here

# HikariCP Pool Configuration (OPTIMIZED FOR CONCURRENT PANEL LOADING)
HIKARI_MINIMUM_IDLE=5
HIKARI_MAXIMUM_POOL_SIZE=15
HIKARI_CONNECTION_TIMEOUT=8000
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000
HIKARI_VALIDATION_TIMEOUT=5000
HIKARI_LEAK_DETECTION_THRESHOLD=10000

# ============================================================================
# SECURITY NOTES:
# ============================================================================
# 1. NEVER commit application.properties with real credentials to Git
# 2. Add application.properties to .gitignore
# 3. Each developer should have their own local application.properties
